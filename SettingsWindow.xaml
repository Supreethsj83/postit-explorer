<Window x:Class="PostItExplorer.Views.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Settings" Height="520" Width="620" WindowStartupLocation="CenterScreen">
    <ScrollViewer>
    <StackPanel Margin="12">
        <TextBlock Text="Accounts" FontSize="18" FontWeight="Bold" Margin="0,0,0,8"/>
        <Border BorderThickness="1" Padding="8" Margin="0,0,0,12">
            <StackPanel>
                <TextBlock Text="Google (Drive AppData)" FontWeight="Bold"/>
                <TextBlock Text="Client ID" Margin="0,6,0,0"/>
                <TextBox x:Name="GoogleClientIdBox"/>
                <TextBlock Text="Client Secret" Margin="0,6,0,0"/>
                <PasswordBox x:Name="GoogleClientSecretBox"/>
                <StackPanel Orientation="Horizontal" Margin="0,8,0,0">
                    <Button Content="Sign in with Google" Width="150" Click="GoogleLogin_Click"/>
                    <Button Content="Sign out" Width="100" Margin="8,0,0,0" Click="GoogleLogout_Click"/>
                </StackPanel>
                <TextBlock TextWrapping="Wrap" Margin="0,8,0,0">
Enable Google login by creating an OAuth Client (Desktop) in Google Cloud Console. Scopes: openid, email, profile, and Drive AppData.
                </TextBlock>
            </StackPanel>
        </Border>

        <Border BorderThickness="1" Padding="8" Margin="0,0,0,12">
            <StackPanel>
                <TextBlock Text="Microsoft (OneDrive App Root)" FontWeight="Bold"/>
                <TextBlock Text="Application (Client) ID" Margin="0,6,0,0"/>
                <TextBox x:Name="MsClientIdBox"/>
                <StackPanel Orientation="Horizontal" Margin="0,8,0,0">
                    <Button Content="Sign in with Microsoft" Width="170" Click="MsLogin_Click"/>
                    <Button Content="Sign out" Width="100" Margin="8,0,0,0" Click="MsLogout_Click"/>
                </StackPanel>
                <TextBlock TextWrapping="Wrap" Margin="0,8,0,0">
Enable Microsoft login by registering a Public Client (mobile/desktop) in Entra ID. Scopes: offline_access, User.Read, Files.ReadWrite.AppFolder.
                </TextBlock>
            </StackPanel>
        </Border>

        <TextBlock Text="Sync" FontSize="18" FontWeight="Bold" Margin="0,8,0,8"/>
        <StackPanel Orientation="Horizontal">
            <Button Content="Sync Now" Width="120" Click="SyncNow_Click"/>
            <TextBlock Text=" Syncs every ~60 seconds automatically when signed in." VerticalAlignment="Center" Margin="12,0,0,0"/>
        </StackPanel>
    </StackPanel>
    </ScrollViewer>
</Window>
